{% extends 'base.html.twig' %}

{% block title %}
    {{ 'action.accept'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'action.accept'|trans }}</h1>
    <h2>{{ ad.title }}</h2>
    {% if ad is defined and ad|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ ad.id }}</dd>
            <dt>{{ 'label.username'|trans }}</dt>
            <dd>{{ ad.username }}</dd>
            <dt>{{ 'label.phone'|trans }}</dt>
            <dd>{{ ad.phone }}</dd>
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ ad.email }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  ad.title }}</dd>
            <dt>{{ 'label.text'|trans }}</dt>
            <dd>{{  ad.text }}</dd>
            <dt>{{ 'label.createdAt'|trans }}</dt>
            <dd>{{ ad.createdAt|format_date(locale='pl') }}</dd>
            <dt>{{ 'label.updatedAt'|trans }}</dt>
            <dd>{{ ad.updatedAt|format_date(locale='pl') }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{ ad.adCategory.name }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.accept'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('accept_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}
