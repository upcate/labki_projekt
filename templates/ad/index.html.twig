{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.ad_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.ad_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.username'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.createdAt'|trans, 'ad.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updatedAt'|trans, 'ad.updatedAt') }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for ad in pagination.items %}
                <tr>
                    <td>{{ ad.id }}</td>
                    <td>{{ ad.username }}</td>
                    <td>{{ ad.title }}</td>
                    <td>{{ ad.createdAt|date('Y/m/d') }}</td>
                    <td>{{ ad.updatedAt|date('Y/m/d') }}</td>
                    <td>{{ ad.adCategory.name }}</td>
                    <td>
                        <a href="{{ url('ad_show', {id: ad.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                        <br>
                        <a href="{{ url('ad_edit', {id: ad.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <br>
                        <a href="{{ url('ad_delete', {id: ad.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <p>
            <a href="{{ url('ad_create') }}" title="{{ 'title.ad_create'|trans }}">
                {{ 'title.ad_create'|trans }}
            </a>
        </p>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}