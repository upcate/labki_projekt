{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.ad_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.ad_list'|trans }}</h1>
    {% if ads is defined and ads|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.username' }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.createdAt'|trans }}</th>
                <th>{{ 'label.updatedAt'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for ads in ads %}
                <tr>
                    <td>{{ ads.id }}</td>
                    <td>{{ ads.username }}</td>
                    <td>{{ ads.title }}</td>
                    <td>{{ ads.createdAt|date('Y/m/d') }}</td>
                    <td>{{ ads.updatedAt|date('Y/m/d') }}</td>
                    <td>
                        <a href="{{ url('ad_show', {id: ads.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}