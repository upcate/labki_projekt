{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_list'|trans }}
{% endblock %}

{% block body %}
    <h1> Records list </h1>
    {% if records is defined and records|length %}

        <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'label.id'|trans }}</th>
            <th>{{ 'label.title'|trans }}</th>
            <th>{{ 'label.tags'|trans }}</th>
            <th scope="col">
                {{ 'label.actions'|trans }}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for record in records %}
            <tr>
                <td> {{ record.id }} </td>
                <td> {{ record.title}} </td>
                <td> {{ record.tags|join(', ') }} </td>
                <td>
                    <a href="{{ url('record_show', {'id': record.id}) }}" title="record show"> Record view </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    {% else %}
        <p> List is empty! </p>
    {% endif %}

{% endblock %}